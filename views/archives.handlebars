<div class="title-container">
    <h1 class="title">Archives</h1>
    <div class="button-container">
        <button class="button email-button" id="email-button" data-toggle="modal"
            data-target="#emailModal">Email</button>

        <button class="button clear-button" id="clear-button" data-toggle="modal"
            data-target="#clearModal">Clear</button>
    </div>
</div>


<div>


    <!-- Modal -->
    <div class="modal fade" id="emailModal" tabindex="-1" aria-labelledby="emailModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="/sendIngredientsEmail" id="emailForm" method="POST">
                    <div class="modal-header">
                        <h5 class="modal-title" id="emailModalLabel">Enter Email</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="input-group">
                            <input type="email" class="form-control" name="email" placeholder="Email" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

                        {{!-- <button class="btn btn-primary">Send</button> --}}
                        <input type="submit" class="btn btn-success" value="Send">
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="clearModal" tabindex="-1" aria-labelledby="clearModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="clearModalLabel">Are you sure you want to clear?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-danger" id="confirm-clear-button">Clear</button>
                </div>
            </div>
        </div>
    </div>


</div>



